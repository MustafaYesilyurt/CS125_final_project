<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteY="81dp">

    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/textView_Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dip"
        android:textSize="16dip"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView_City"
        app:layout_constraintStart_toStartOf="parent"></TextView>

    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/textView_City"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/textView_Name"
        android:padding="10dip"
        android:textSize="16dip"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/textView_Name"
        app:layout_constraintTop_toTopOf="parent"></TextView>

    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/textView_State"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/textView_City"
        android:padding="10dip"
        android:textSize="16dip"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView_City"
        app:layout_constraintStart_toEndOf="@+id/textView_City"></TextView>
</android.support.constraint.ConstraintLayout>